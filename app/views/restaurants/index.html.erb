<h1 class="mb-4">Voici tous les restaurants</h1>
<div class="container">
  <% @restaurants.each do |restaurant| %>
  <h3 class="mt-4"><%= restaurant.name %></h3>
  <li><%= restaurant.address %></li>
  <li><%= restaurant.phone_number %></li>
  <li><%= restaurant.category %></li>
  <%= link_to "Voir ce restaurant", restaurant_path(restaurant), class: "btn btn-primary mt-3" %>
  <p><%= link_to "Laisser un commentaire",  new_restaurant_review_path(restaurant), class: "btn btn-primary mt-3"%></p>
  <% end %>
  <%= link_to "Ajouter un restaurant", new_restaurant_path, class: "btn btn-primary mt-3" %>
</div>
