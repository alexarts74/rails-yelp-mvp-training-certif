<div class="container mt-3">
  <h1><%= @restaurant.name %></h1>
  <li><%= @restaurant.address %></li>
  <li><%= @restaurant.phone_number %></li>
  <li><%= @restaurant.category %></li>
  <% @restaurant.reviews.each do |review|%>
    <h3 class="mt-3">Reviews :</h3>
    <li><%= review.rating %> / 5</li>
    <li><%= review.content %></li>
  <% end %>
  <%= link_to "Laisser un commentaire",  new_restaurant_review_path(@restaurant), class: "btn btn-primary mt-3" %>
  <%= link_to "Voir tous les restaurants", restaurants_path, class: "btn btn-secondary mt-3" %>
</div>
